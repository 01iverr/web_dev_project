<main id="category-products">
    <br><br><br>
    <form method="POST" id="signin-form" novalidate>
        <fieldset id="signin-registration-form">
            <legend>Sign in</legend>

            <div class="input-username" id="username-input">
                <label for="profile-username">
                  Username<abbr title="Necessary Field">(*)</abbr>:
                </label>
                <input type="username" id="profile-username" name="signin_Username" placeholder="Username" required>
            </div>

            <div class="input-password" id="password-input">
                <label for="profile-password">
                  Password<abbr title="Necessary Field">(*)</abbr>:
                </label>
                <input type="password" id="profile-password" name="signin_Password" required>
            </div>

        </fieldset>

        <div class="buttons" id="signin-buttons">
            <input type="submit" id="button-login-submit" name="submit">
        </div>
    </form>
    <div id="title"></div>
    <aside id="filters"></aside>
    <article id="products"></article>
</main>

<script id="title-template" type="text/x-handlebars-template">
    <h1>Product Category: \{{category_title}}</h1>
</script>

<script id="subcategories-template" type="text/x-handlebars-template">
    <p>Click bellow to apply filters:</p>
    <ul id="subcategories-list">
        <li class="subcategory">
            <label class="radiochoices" for="all">
                <input type="radio" id="all" name="subcategory" value="all" checked="checked" onchange="filterProducts()">
                <p>All</p>
            </label>
        </li>
        \{{#each subcategories}}
        <li class="subcategory">
            <label class="radiochoices" for="\{{this.title}}">
                <input type="radio" id="\{{this.title}}" name="subcategory" value="\{{this.title}}" onchange="filterProducts()">
                <p>\{{this.title}}</p>
            </label>
        </li>
        \{{/each}}
    </ul>
</script>


<script id="product-template" type="text/x-handlebars-template">
    \{{#each products}}
        <div class="product">
            <h2>\{{this.title}}</h2>
            <img src="\{{this.image}}" width="200px">
            \{{this.description}}
            <div id="price">\{{this.cost}}</div>
        </div>
    \{{/each}}
</script>

<script type="text/javascript" src="../javascript/category.js"></script>
<script type="text/javascript" src="../javascript/signin.js"></script>